  public static void sort012(int[] arr){	
      int zero=0,one=0,two=0,j=0;
      for(int i=0; i< arr.length;i++){
          if(arr[i]==0){
              zero++;
          }else if(arr[i]==1){
              one++;
          }else{
              two++;
          }
      }
      while(zero>0){
          arr[j++]=0;
          zero--;
      }
      while(one>0){
          arr[j++]=1;
          one--;
      }
      while(two>0){
          arr[j++]=2;
          two--;
      }
  }
