public static void main(String[] args) {
		// Write your code here
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int sum=0;
		for(int i=1;i<=n;i++) 
    {
			for(int j=1;j<=i;j++) 
      {
				System.out.print(j);
				if(j!=i) 
        {
					System.out.print("+");
				}	
			}
			sum=sum+i;
			System.out.print("=");
			System.out.print(sum);
			System.out.print("\n");
		}
	}
