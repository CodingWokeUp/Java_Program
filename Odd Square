public static void main(String[] args)
{
		// Write your code here
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for (int i = 1; i <= n; i++) 
    {
			int p = i * 2 - 1;
			for (int j = n; j >= i; j--) 
      {

				System.out.print(p);
				p += 2;
			}
			int temp = 1;
			for (int j = 1; j <= i - 1; j++) 
      {

				System.out.print(temp);
				temp += 2;
			}

			System.out.print("\n");
		}

	}
